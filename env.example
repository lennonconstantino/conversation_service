# WhatsApp Configuration
VERIFICATION_TOKEN=your_verification_token_here
WHATSAPP_API_TOKEN=your_whatsapp_api_token_here
MY_BUSINESS_TELEPHONE=your_business_phone_here

# Server Configuration
HOST=0.0.0.0
PORT=5001
DEBUG=true
IS_DEV_ENVIRONMENT=true

# Database Configuration
DATABASE_PATH=conversations.db
DB_TYPE=sqlite

# Conversation Configuration
CONVERSATION_IDLE_TIMEOUT_MINUTES=2
MAX_MESSAGE_LENGTH=4000
CONVERSATION_DATABASE_NAME=conversation
CLEANUP_DAYS_OLD=30
CLEANUP_BATCH_SIZE=100
MAX_CONVERSATION_HISTORY=1000
ENABLE_CLEANUP_ON_OPERATION=false

# OpenAI Configuration (if using AI responses)
OPENAI_API_KEY=your_openai_api_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
